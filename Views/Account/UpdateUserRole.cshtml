@model OnlineLibrary.Models.UserRoleDisplayModel
<div>
    <form asp-action="UpdateUserRole">
        <div class="form-group">
            <label asp-for="FullName">FullName</label>
            <input asp-for="FullName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Role">Role</label>
            <select class="form-control" asp-for="Role"
                    asp-items="@(new SelectList(Model.Roles, "Id", "Name"))"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>
</div>